/**index.wxss**/
.container {
  padding: 30rpx 20rpx 0rpx 20rpx;
}

.label_new {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.left_line {
  background: #57E144;
  width: 10rpx;
  height: 40rpx;
}

.label_new text {
  margin-left: 20rpx;
  font-size: 30rpx;
}

.movie_box {
  display: flex;
  margin: 30rpx 10rpx 10rpx 10rpx;
  background: #F9F9F9;
  box-shadow: 0rpx 0rpx 8rpx #666;
  border-radius: 4rpx;
  /*height: 320rpx;*/
}

.movie_box image {
  width: 240rpx;
  height:320rpx;
  border-top-left-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
  flex-shrink: 0;
}

.movie_bref {
  display: flex;
  flex-direction: column;
  padding: 30rpx 28rpx 15rpx 45rpx;
  line-height: 1.2;
}

.movie_title {
  font-size: 40rpx;
  font-weight: bold;
}

.movie_time {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #A49C9C
}

.movie_category {
  margin-top: 20rpx;
  font-size: 22rpx;
}

.movie_introduce_wrapper {
  flex-grow: 1;
}

.movie_introduce {
  font-size: 22rpx;
  margin-top: 30rpx;
  line-height: 1.3;
  /**设置多行溢出省略号**/
  display: -webkit-box ;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
}
.movie_updatetime {
  font-size: 20rpx;
  color: #A49C9C;
  margin-top:10rpx;
}